<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 辅助线定义 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_safeBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="30px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_leftStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1220px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_leftMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="630px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_rightStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1260px"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_rightEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1880px"/>

    <!-- ================= 左列区域 (5行) ================= -->

    <!-- 1. ASR REAL-TIME -->
    <TextView
        android:id="@+id/tv_asrTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ ASR REAL-TIME ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40px"/>

    <LinearLayout
        android:id="@+id/ll_asrBody"
        android:layout_width="0dp"
        android:layout_height="50px"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="8px"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tv_asrTitle"
        android:layout_marginTop="4px">
        <TextView
            android:id="@+id/tvAsrPartial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView android:id="@+id/tvAsrFinal" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <TextView android:id="@+id/tvRouterDecision" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    </LinearLayout>

    <!-- 2. RECOGNIZED TEXT -->
    <TextView
        android:id="@+id/tv_recognizedTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ RECOGNIZED TEXT ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/ll_asrBody"
        android:layout_marginTop="6px"/>

    <TextView
        android:id="@+id/tvReplyText"
        android:layout_width="0dp"
        android:layout_height="60px"
        android:background="#222222"
        android:padding="10px"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tv_recognizedTitle"
        android:layout_marginTop="4px"/>

    <!-- 3. OUTPUT TEXT -->
    <TextView
        android:id="@+id/tv_outputTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ OUTPUT TEXT ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tvReplyText"
        android:layout_marginTop="6px"/>

    <ScrollView
        android:id="@+id/outputTextScrollView"
        android:layout_width="0dp"
        android:layout_height="160px"
        android:background="#222222"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tv_outputTitle"
        android:layout_marginTop="4px">
        <TextView
            android:id="@+id/tvOutputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="start" />
    </ScrollView>

    <!-- 4. STATUS + CORE INFO -->
    <TextView
        android:id="@+id/tv_statusTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ STATUS ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_leftMid"
        app:layout_constraintTop_toBottomOf="@id/outputTextScrollView"
        android:layout_marginTop="6px"
        android:layout_marginEnd="10px"/>

    <LinearLayout
        android:id="@+id/ll_statusBody"
        android:layout_width="0dp"
        android:layout_height="230px"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_leftMid"
        app:layout_constraintTop_toBottomOf="@id/tv_statusTitle"
        android:layout_marginTop="4px"
        android:layout_marginEnd="10px">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4px">
            <View
                android:id="@+id/vStatusLight"
                android:layout_width="12px"
                android:layout_height="12px"
                android:background="@android:color/darker_gray"
                android:layout_marginEnd="8px"/>
            <TextView android:id="@+id/tvStatus" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Status: Initializing" android:textColor="#FFA500" android:textSize="12sp"/>
        </LinearLayout>

        <TextView android:id="@+id/tvVadInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="VAD: RMS=0.0" android:textColor="#00FFFF" android:textSize="12sp"/>
        <TextView android:id="@+id/tvCountdown" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Countdown: 0s" android:textColor="#FFFF00" android:textSize="12sp"/>
        <TextView android:id="@+id/tvWakewordHits" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Wakeword Hits: 0" android:textColor="#FF00FF" android:textSize="12sp"/>
        <TextView android:id="@+id/tvModel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Model: Loading..." android:textColor="#888888" android:textSize="12sp"/>
        <Button
            android:id="@+id/btnPauseResume"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:text="暂停/开始"
            android:textSize="12sp"
            android:background="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:orientation="horizontal"
            android:layout_marginTop="4px">
            <Button
                android:id="@+id/btnTtsReplay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="重播语音"
                android:textSize="10sp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="2px"/>
            <Button
                android:id="@+id/btnTtsStop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="停止播报"
                android:textSize="10sp"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="2px"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_coreTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ CORE INFO ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftMid"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/outputTextScrollView"
        android:layout_marginTop="6px"
        android:layout_marginStart="10px"/>

    <LinearLayout
        android:id="@+id/ll_coreBody"
        android:layout_width="0dp"
        android:layout_height="190px"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="@id/g_leftMid"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tv_coreTitle"
        android:layout_marginTop="4px"
        android:layout_marginStart="10px">
        <TextView android:id="@+id/tvCoreAsrPartial" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ASR_PARTIAL: " android:textColor="#FFFFFF" android:textSize="15sp" android:layout_marginBottom="4px"/>
        <TextView android:id="@+id/tvCoreAsrFinal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ASR_FINAL: " android:textColor="#FFFFFF" android:textSize="15sp" android:layout_marginBottom="4px"/>
        <TextView android:id="@+id/tvCoreRouterDecision" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ROUTER_DECISION: " android:textColor="#FFFFFF" android:textSize="15sp"/>
    </LinearLayout>

    <!-- 5. VIDEO + LLM LOG -->
    <TextView
        android:id="@+id/tv_videoTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ VIDEO ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_leftMid"
        app:layout_constraintTop_toBottomOf="@id/ll_statusBody"
        android:layout_marginTop="6px"
        android:layout_marginEnd="10px"/>

    <LinearLayout
        android:id="@+id/videoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#222222"
        android:padding="4px"
        app:layout_constraintStart_toStartOf="@id/g_leftStart"
        app:layout_constraintEnd_toStartOf="@id/g_leftMid"
        app:layout_constraintTop_toBottomOf="@id/tv_videoTitle"
        app:layout_constraintBottom_toTopOf="@id/g_safeBottom"
        android:layout_marginTop="4px"
        android:layout_marginEnd="10px">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <VideoView
                android:id="@+id/videoView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <!-- 暂停图标遮罩 -->
            <ImageView
                android:id="@+id/ivPauseIcon"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@android:drawable/ic_media_pause"
                android:alpha="0.6"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#FFFFFF" />

            <!-- 实时音量条 -->
            <ProgressBar
                android:id="@+id/pbVolume"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="4px"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@android:drawable/progress_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4px"
                android:layout_marginStart="10px"
                android:layout_marginEnd="10px" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="70px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="2px">
            <Button android:id="@+id/btnVideoPlayPause" android:layout_width="65px" android:layout_height="36px" android:text="P/R" android:textSize="10sp" android:background="#FF5722" android:textColor="#FFFFFF" android:layout_marginBottom="6px"/>
            <Button android:id="@+id/btnVideoVolumeUp" android:layout_width="65px" android:layout_height="36px" android:text="V+" android:textSize="10sp" android:background="#2196F3" android:textColor="#FFFFFF" android:layout_marginBottom="6px"/>
            <Button android:id="@+id/btnVideoVolumeDown" android:layout_width="65px" android:layout_height="36px" android:text="V-" android:textSize="10sp" android:background="#2196F3" android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_llmTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ LLM LOG ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_leftMid"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/ll_coreBody"
        android:layout_marginTop="6px"
        android:layout_marginStart="10px"/>

    <ScrollView
        android:id="@+id/llmLogScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="@id/g_leftMid"
        app:layout_constraintEnd_toStartOf="@id/g_split"
        app:layout_constraintTop_toBottomOf="@id/tv_llmTitle"
        app:layout_constraintBottom_toTopOf="@id/g_safeBottom"
        android:layout_marginTop="4px"
        android:layout_marginStart="10px">
        <TextView
            android:id="@+id/tvLlmLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFF00"
            android:textSize="12sp"
            android:typeface="monospace"
            android:fontFamily="monospace" />
    </ScrollView>

    <!-- ================= 右列区域 (3行) ================= -->

    <!-- 1. SYSTEM MONITOR -->
    <LinearLayout
        android:id="@+id/ll_systemMonitor"
        android:layout_width="0dp"
        android:layout_height="260px"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="12px"
        app:layout_constraintStart_toStartOf="@id/g_rightStart"
        app:layout_constraintEnd_toStartOf="@id/g_rightEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40px">
        <TextView 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="[ SYSTEM MONITOR ]" 
            android:textColor="#00FF66" 
            android:textSize="16sp" 
            android:background="#111111" 
            android:paddingStart="12px" 
            android:gravity="center_vertical"
            android:layout_marginBottom="8px"/>
        
        <TextView android:id="@+id/tvCpu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CPU: 0%" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvCpuModel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Model: Unknown" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvMem" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="MEM: 0MB" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvDisk" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="DISK: 0GB" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvNet" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NET: IN: 0.00 OUT: 0.00" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvNpu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NPU: 0%" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:layout_marginBottom="2px" android:gravity="start"/>
        <TextView android:id="@+id/tvGpu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GPU: 0MHz" android:textColor="#FFFFFF" android:textSize="12sp" android:paddingStart="12px" android:gravity="start"/>
    </LinearLayout>

    <!-- 2. DIGITAL HUMAN -->
    <TextView
        android:id="@+id/tvDigitalHumanAvatar"
        android:layout_width="0dp"
        android:layout_height="240px"
        android:text="[ DIGITAL HUMAN AVATAR ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#222222"
        app:layout_constraintStart_toStartOf="@id/g_rightStart"
        app:layout_constraintEnd_toStartOf="@id/g_rightEnd"
        app:layout_constraintTop_toBottomOf="@id/ll_systemMonitor"
        android:layout_marginTop="8px" />

    <!-- 3. BROADCAST LOG -->
    <TextView
        android:id="@+id/tv_broadcastTitle"
        android:layout_width="0dp"
        android:layout_height="34px"
        android:text="[ BROADCAST LOG ]"
        android:textColor="#00FF66"
        android:textSize="16sp"
        android:paddingStart="12px"
        android:gravity="center_vertical"
        android:background="#111111"
        app:layout_constraintStart_toStartOf="@id/g_rightStart"
        app:layout_constraintEnd_toStartOf="@id/g_rightEnd"
        app:layout_constraintTop_toBottomOf="@id/tvDigitalHumanAvatar"
        android:layout_marginTop="8px"/>

    <ScrollView
        android:id="@+id/broadcastLogScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="@id/g_rightStart"
        app:layout_constraintEnd_toStartOf="@id/g_rightEnd"
        app:layout_constraintTop_toBottomOf="@id/tv_broadcastTitle"
        app:layout_constraintBottom_toTopOf="@id/g_safeBottom"
        android:layout_marginTop="4px">
        <TextView
            android:id="@+id/tvBroadcastLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFF00"
            android:textSize="12sp"
            android:typeface="monospace"
            android:fontFamily="monospace"
            android:gravity="top|start" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>