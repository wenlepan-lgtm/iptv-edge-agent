<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/black">

    <!-- 左侧区域：62% 屏幕宽度 留白 / Digital Human Placeholder -->
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="62"
        android:background="@android:color/black" />

    <!-- 右侧信息面板：38% 屏幕宽度 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="38"
        android:padding="12dp"
        android:orientation="vertical">

        <!-- 系统监控区 (固定在顶部) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:id="@+id/tvSystemMonitorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[ SYSTEM MONITOR ]"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPU: 0%"
                android:textColor="#00FF00"
                android:textSize="13sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tvMem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEM: 0 / 0 MB"
                android:textColor="#00FF00"
                android:textSize="13sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tvDisk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISK(/data): 0 / 0 GB"
                android:textColor="#00FF00"
                android:textSize="13sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tvNet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NET: RX 0 KB/s  TX 0 KB/s"
                android:textColor="#00FF00"
                android:textSize="13sp"
                android:typeface="monospace" />
        </LinearLayout>

        <!-- ASR 实时识别区 (固定高度) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ ASR REAL-TIME ]"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAsrText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#1A1A1A"
            android:padding="8dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_marginBottom="12dp" />

        <!-- Reply 最终识别区 (固定高度) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ RECOGNIZED TEXT ]"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReplyText"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1A1A1A"
            android:padding="8dp"
            android:text="Waiting for speech..."
            android:textColor="#00FF00"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginBottom="12dp" />

        <!-- 状态信息 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Initializing"
            android:textColor="#FFA500"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tvModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model: Loading..."
            android:textColor="#888888"
            android:textSize="12sp"
            android:typeface="monospace" />

    </LinearLayout>
</LinearLayout>
